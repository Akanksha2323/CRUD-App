<%- include('./partials/header.ejs') %>

<div class="container">
<div class= "row">
<div class="col-sm-6 mt-5">
    <h2 class="alert alert-success text-center">Update Student</h2>

    <form action="/student/Update/<%= data._id %>" method= "post">
        <div class="mb-3">
           <label form="name" class="form-label">Name</label>
           <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>">
        </div>
   
        <div class="mb-3">
           <label form="name" class="form-label">Age</label>
           <input type="text" class="form-control" id="Age" name="Age" value="<%= data.age %>">
        </div>
   
        <div class="mb-3">
           <label form="name" class="form-label">Fees</label>
           <input type="text" class="form-control" id="Fees" name="Fees" value="<%= data.fees %>">
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <button type="submit" class="btn btn-secondary">Back to Home</button>
        </form>
</div> 

</div>
</div>

